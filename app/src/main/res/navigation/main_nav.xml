<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="be.ehb.parkmycar.fragments.HomeFragment"
        android:label="ParkMyCar"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/go_to_about_me"

            app:destination="@id/aboutMeFragment" />
        <action
            android:id="@+id/go_to_detail"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mi_prefference_frag"
        android:name="be.ehb.parkmycar.fragments.PreferrenceFragment"
        android:label="Settings" />
    <fragment
        android:id="@+id/aboutMeFragment"
        android:name="be.ehb.parkmycar.fragments.AboutMeFragment"

        android:label="About"
        tools:layout="@layout/fragment_about_me" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="be.ehb.parkmycar.fragments.DetailsFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_details" />
</navigation>